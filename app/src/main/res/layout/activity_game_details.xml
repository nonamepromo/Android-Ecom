<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetailsActivity">

    <ImageView
        android:id="@+id/game_image_details"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/game_title_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_image_details"
        android:text="Titolo del videogioco"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/game_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_title_details"
        android:text="Descrizione del videogioco"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
    android:id="@+id/game_price_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/game_description_details"
    android:text="Prezzo del videogioco"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="18sp"
    android:gravity="center"
    android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/game_console_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_price_details"
        android:text="Console del videogioco"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/game_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:text="Aggiungi al carrello"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>